# Alpaca Markets (Trading & Data)
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Financial Modeling Prep (Fundamentals)
FMP_API_KEY=your_fmp_key_here

# SEC EDGAR (Required for edgartools)
# Format: "Name (email@domain.com)"
SEC_EDGAR_USER_AGENT="Your Name (your_email@example.com)"

# SMTP (Email & SMS Alerts)
# To send SMS for free, use your carrier's gateway:
# Verizon: [number]@vtext.com
# AT&T: [number]@txt.att.net
# T-Mobile: [number]@tmomail.net
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password  # Use a Google App Password if using Gmail
SMTP_FROM=your_email@gmail.com
SMTP_TO=your_target_email@domain.com      # Set this to your phone's SMS gateway for texts
SMTP_TO_SMS=your_number@vtext.com         # Secondary address specifically for SMS alerts

# FRED (Macro/Economic Data)
FRED_API_KEY=your_fred_key_here
